<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txt_cat_title" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.creatrix.ttb.custom_hashtag.HashtagView
            android:id="@+id/hashtags2"
            style="@style/HashtagView"
            app:rowMode="stretch"
            app:selectionMode="true"
            app:tagBackground="@drawable/item_bg_1"
            app:tagForeground="@drawable/flat_button_light"
            app:tagTextColor="#E5E5E5" />
    </LinearLayout>
</LinearLayout>
